<UserControl x:Class="ChessUI.GameUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ChessUI"
             mc:Ignorable="d" 
             d:DesignHeight="720" d:DesignWidth="1200">
    <Grid x:Name="MainGame">
        <Grid.Background>
            <ImageBrush ImageSource="Assets/Images/background.jpg"/>
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="0.4*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3.3*"/>
            <ColumnDefinition Width="6*"/>
            <ColumnDefinition Width="1.2*"/>
        </Grid.ColumnDefinitions>

        <Viewbox Grid.Column="1" Grid.RowSpan="3">
            <Grid>
                <Grid x:Name="BoardGrid"
                      Width="720"
                      Height="720"
                      >
                    <Grid.Background>
                        <ImageBrush ImageSource="Assets/Images/board.jpg"/>
                    </Grid.Background>
                </Grid>
                <Grid x:Name="CellGrid"
                      Width="710"
                      Height="720"
                      MouseDown="BoardGrid_MouseDown">
                    <UniformGrid x:Name="PieceGrid"
                         Rows="10"
                         Columns="9"
                         RenderOptions.BitmapScalingMode="HighQuality">     
                    </UniformGrid>
                    <UniformGrid x:Name="PosMovedGrid"
                         Rows="10"
                         Columns="9">                        
                    </UniformGrid>
                    <UniformGrid x:Name="HighlightGrid"
                         Rows="10"
                         Columns="9">
                    </UniformGrid>
                </Grid>
            </Grid>
        </Viewbox>
        <StackPanel Grid.Column="2" Grid.RowSpan="3"
                    VerticalAlignment="Center">
            <Button x:Name="PauseButton"
                    Content="Tạm dừng"
                    Style="{StaticResource ButtonStyle1}"
                    Width="110"
                    Height="50"
                    Margin="0,0,5,10" Click="PauseButton_Click"/>

            <Button x:Name="UndoButton"
                    Content="Đi lại"
                    Style="{StaticResource ButtonStyle1}"
                    Width="110"
                    Height="50"
                    Margin="0,0,5,10" Click="UndoButton_Click"/>

            <TextBlock Text="Lượt của:"
                       Style="{StaticResource TextStyle2}"
                       Foreground="Black"
                       FontSize="20"
                       Margin="0,5,5,5"
                       />
            <TextBlock x:Name="TurnTextBlock"
                       Style="{StaticResource TextStyle2}"
                       Foreground="Red"
                       FontSize="20"
                       Margin="0,0,5,10"
                       />
            <Border Width="110" Height="50"      
                    Style="{StaticResource BorderStyle2}"
                    Margin="0,0,5,0">
                <TextBlock x:Name="Clock" 
                           Foreground="Black"
                           Style="{StaticResource TextStyle2}"
                           FontSize="20"/>
            </Border>
        </StackPanel>
        <Border Grid.Row="1" Margin="5,10,5,10"
                Style="{StaticResource BorderStyle2}"
                Opacity="0.5"/>
        <StackPanel x:Name="GameInformationStackPanel" VerticalAlignment="Center"
                    Grid.Row="1" Margin="5,10,5,10">
            <TextBlock x:Name="GameInformationTextBlock"
                       Style="{StaticResource TextStyle2}"
                       FontSize="20"
                       Text="Chế độ chơi: "/>
        </StackPanel>
    </Grid>
</UserControl>

