<UserControl x:Class="ChessUI.Menus.InstructionsMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ChessUI.Menus"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1000">
    
    <Border Width="700"
            Height="500"
            Style="{StaticResource BorderStyle1}" Opacity="0.75">  
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="4*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0"
                       Text="LUẬT CHƠI"
                       Style="{StaticResource TextStyle}"
                       FontSize="35"/>

            <Button x:Name="HomeButton" Grid.Row="2"
                    Content="Quay về"
                    Style="{StaticResource ButtonStyle1}"
                    Width="220"
                    Height="60" Click="HomeButton_Click"/>

        </Grid>
    </Border>
</UserControl>
