<UserControl x:Class="ChessUI.RoomControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ChessUI"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Grid Width="200" Margin="0,0,0,10">
                <TextBox x:Name="RoomNameTextBox" Width="200" Tag="Enter Room Name" GotFocus="RemovePlaceholderText" LostFocus="ShowPlaceholderText"/>
                <TextBlock x:Name="PlaceholderTextBlock" Text="Enter Room Name" Foreground="Gray" IsHitTestVisible="False" VerticalAlignment="Center" Margin="5,0,0,0"/>
            </Grid>
            <Button x:Name="CreateRoomButton" Content="Create Room" Width="200" Margin="0,0,0,10" Click="CreateRoomButton_Click"/>
            <Button x:Name="JoinRoomButton" Content="Join Room" Width="200" Click="JoinRoomButton_Click"/>
        </StackPanel>
    </Grid>
</UserControl>
